@startuml "C1 Diagram"
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

LAYOUT_WITH_LEGEND()

AddRelTag("dashedLine", $lineStyle=DashedLine())

Person(student, "Student", "A registered user seeking housing")
Person(landlord, "Landlord", "A person advertising and managing their listings")

Container(web_app, "Student Housing System", "Software System", "Allows students to view listing information, respond to listings, and communicate with their landlord")
Container_Ext(mail_serv, "E-mail System", "Software System", "Google's Gmail system")

Rel(student, web_app, "Views and responds to listings")
Rel(landlord, web_app, "Manages owned listings, views messages from tenants")

Rel_R(web_app, mail_serv, "Sends e-mail using")
Rel_U(mail_serv, student, "Sends e-mails to")
@enduml